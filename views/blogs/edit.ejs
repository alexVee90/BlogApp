<%- include('../partials/header') %>
<h2 class="main-header">Edit Post</h2>
<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
  <div class="form-container">
    <div class="form-group">
      <label for="title">Title</label>
      <input name="title" value="<%= blog.title %>" type="text">
    </div>
    <div class="form-group">
      <label for="image">Image URL</label>
      <input name="image" value="<%= blog.image %>" type="text">
    </div>
    <div class="form-group">
      <label for="desc">Description</label>
      <textarea name="desc" id="" cols="30" rows="10"><%= blog.desc %></textarea>
    </div>
    <button class="btn">Submit</button>
  </div>
</form>
<%- include('../partials/footer') %>