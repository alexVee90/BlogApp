<%- include('../partials/header') %>
<h2 class="main-header"><%= blog.title %></h2>
<div id="area">
  <img src="<%= blog.image %>" alt="" />
  <div id="description">
    <p><%= blog.desc %></p>
    <div id="buttons">
      <a class="btn-edit" href="/blogs/<%= blog._id %>/edit">EDIT</a>
      <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="btn-remove">DELETE</button>
      </form>
    </div>
    <span><strong>Created on:</strong> <%= blog.date %></span>
  </div>
</div>

<div class="comments-area">
  <h2 class="main-header">Comments Section</h2>
  <% if(blog.comments.length != 0) { %> 
    <% blog.comments.forEach( comment => { %>
      <div class="comments-card">
        <h5 class="comments-item"><%= comment.author %></h5>
        <p class="comments-item"><%= comment.text %></p>
        <form
          action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn-remove">DELETE</button>
        </form>
      </div>
    <% }) %> 
  <% } else { %>
  <p class='main'>There are no comments in this section!</p>
  <% } %>
  <a href="/blogs/<%= blog._id %>/comments/new" class="btn"
    >Please leave a comment</a
  >
</div>
<%- include('../partials/footer') %>
